model commentList {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  likes     Int      @default(0)
  isLiked   Boolean
  author    user     @relation(fields: [userName], references: [name])
  userName  String
  post      post     @relation(fields: [postId], references: [id])
  postId    Int
}
